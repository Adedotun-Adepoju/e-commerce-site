<%
=begin%>
 <div class="d-flex align-items-center justify-content-center">
    <h1>Welcome to the voice empowered e-commerce site</h1>
    <h3>Categories</h3>

</div> 
<%
=end%>

<div class="main-container">
  <div class="Header">
		<h3>Categories</h3>
	</div>
	<div class="categories-container">
		<% @categories.each do |category| %>
			<div class="single-category-container">
				<a href="">
					<div class="image-container">
						<%= image_tag category.img_src.to_s, class: "category-image" %>
					</div>
					<h3>
						<span class="category-name"><%= category.category_name %></span>
					</h3>
					<p class="category-description">Gaming hardware and accessories</p>
				</a>
			</div>
		<% end %>
	</div>
</div>
<a href="#"><%= image_tag "microphone.png", class: "fix" %></a>