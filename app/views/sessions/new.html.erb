<div class="sign-in-form" >
    <%= form_with url: sign_in_path do |form| %>
        <div class="mb-3">
            <%= form.label :first_name, class: "form-label"%>
            <%= form.text_field :first_name, class: "form-control", placeholder: "Type your First Name" %>
        </div>
        <div class="mb-3">
            <%= form.label :last_name, class: "form-label" %>
            <%= form.text_field :last_name, class: "form-control", placeholder: "Type your Last name" %>
        </div>
        <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.text_field :email, class: "form-control", placeholder: "Type your email" %>
        </div>
        <div class="mb-3">
            <%= form.submit "Login", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>