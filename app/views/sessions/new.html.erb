<% content_for :head do %>
  <%= stylesheet_link_tag 'signin' %>
<% end %>

<div class="sign-in-form" >
	<h3>Sign In</h3>
	<div class="form-container">
		<%= form_with url: sign_in_path do |form| %>
			<div class="mb-3">
				<%= form.label :first_name, class: "form-label field-name"%>
				<%= form.text_field :first_name, class: "form-control", placeholder: "Type your First Name" %>
			</div>
			<div class="mb-3">
				<%= form.label :last_name, class: "form-label field-name" %>
				<%= form.text_field :last_name, class: "form-control", placeholder: "Type your Last name" %>
			</div>
			<div class="mb-3">
				<%= form.label :email, class: "form-label field-name" %>
				<%= form.text_field :email, class: "form-control", placeholder: "Type your email" %>
			</div>
			<div class="mb-3 submit-container">
				<%= form.submit "Login", class: "btn btn-primary submit-button" %>
			</div>
		<% end %>
	</div>
</div>