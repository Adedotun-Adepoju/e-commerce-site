<% content_for :head do %>
  <%= stylesheet_link_tag 'navbar' %>
<% end %>

<div class="top-container">
  <div class="top-banner">
    <%= image_tag "mic.jpeg", class: "mic-image" %>
    <p class="banner-text"> Shopify has officially launched as a voice empowered e-commerce site. <a href="#">Learn more</a></p>
  </div>
</div>
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid sub-banner bg-body-tertiary">
    <div class="collapse navbar-collapse" id="nav-first-section">
      <ul class="navbar-nav nav-first-section">
        <li class="nav-item">
          <%= link_to "Home", root_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Search bar", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class:"nav-link" %>
        </li>
      </ul>

      <form id="search" method="get" action="#" onsubmit="search">
        <input class="search" type="text" placeholder="Search products">
      </form>

      <div class="right-container">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 right-nav-container">
          <% if Current.customer %>
            <li class="nav-item name-container">
              <span class="name"><%= "Hi, #{Current.customer.first_name}"%></span>
            </li>
            <li class="nav-item cart-container">
              <%= image_tag "cart.png", class: "cart-image" %>
              <%= link_to "Cart", root_path, class: "nav-link right-nav-item" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", sign_out_path, method: :delete, class: "nav-link" %>
            </li class="nav-item">
          <% else %>
            <li class="nav-item login">
              <%= link_to "Login", sign_in_path, class: "nav-link" %>
            </li>
            <li class="nav-item login">
              <%= link_to "About", sign_in_path, class: "nav-link" %>
            </li>
            <li class="nav-item login">
              <%= link_to "Contact", sign_in_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>